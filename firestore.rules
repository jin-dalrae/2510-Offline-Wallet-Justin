rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - for wallet accounts
    match /users/{userId} {
      // Anyone can create a user (for signup)
      allow create: if true;
      
      // Authenticated users can read and update user data
      // Note: Google users are stored as 'google_{uid}', so we allow any authenticated user
      allow read, update: if request.auth != null;
      
      // Admins can read all users
      allow read: if request.auth != null && 
                    exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      
      // Allow delete only by authenticated users
      allow delete: if request.auth != null;
    }
    
    // Wallets collection - for multi-wallet support
    match /wallets/{walletId} {
      // Users can create wallets
      allow create: if true;
      
      // Users can read their own wallets
      allow read: if true;
      
      // Users can update/delete their own wallets
      allow update, delete: if request.auth != null;
    }
    
    // Pending transactions - for offline sync
    match /pending_transactions/{transactionId} {
      // Allow anyone to read (for receiver to claim vouchers)
      allow read: if true;
      
      // Allow authenticated users to create transactions
      allow create: if true;
      
      // Allow updates (for settlement status changes)
      allow update: if true;
      
      // Allow delete (for cleanup after settlement)
      allow delete: if true;
    }
    
    // Transaction history
    match /transactions/{transactionId} {
      // Users can read all transactions (filtered in app)
      allow read: if true;
      
      // Allow create for recording transactions
      allow create: if true;
      
      // Allow update for status changes
      allow update: if true;
    }
    
    // Admin collection
    match /admins/{adminId} {
      // Only admins can read admin list
      allow read: if request.auth != null;
      
      // Only existing admins can add new admins
      allow write: if request.auth != null && 
                     exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Audit logs - admin only
    match /audit_logs/{logId} {
      // Admins can read audit logs
      allow read: if request.auth != null;
      
      // System can create audit logs
      allow create: if true;
      
      // No updates or deletes to preserve audit trail
      allow update, delete: if false;
    }
    
    // Settings collection
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
